!!!
%html
  %head
    %meta(charset='utf-8')
    %title
      - if current_page.data.title.present?
        = current_page.data.title
        = '- 大江戸Ruby会議08'
      - elsif @title.present?
        = @title
        = '- 大江戸Ruby会議08'
      - else
        = '大江戸Ruby会議08'
    %meta(name='viewport' content='width=device-width, initial-scale=1')
    %meta(property='og:title' content='大江戸Ruby会議08 2020/02/11（月・祝）浅草')
    %meta(property='og:site_name' content='大江戸Ruby会議08')
    %meta(property='og:url' content='http://regional.rubykaigi.org/oedo08/')
    %meta(property='og:type' content='activity')
    %meta(property='og:image' content="https://asakusarb.github.io/oedo08/#{image_path('og_image.png')}")
    %meta(name='twitter:site' content='@OedoRubyKaigi')
    %meta(name='description' content='大江戸Ruby会議08 2020/02/11（月・祝）5F・6F ときわホール')
    %meta(name='keywords' content='oedo, rubykaigi, 大江戸ruby会議, asakusa.rb, 08, 2020')
    -# TODO
      %link{href: "/images/apple-touch-icon.png", rel: "apple-touch-icon", sizes: "180x180"}
      %link{href: "/images/favicon-32x32.png", rel: "icon", sizes: "32x32", type: "image/png"}
      %link{href: "/images/favicon-16x16.png", rel: "icon", sizes: "16x16", type: "image/png"}
      %link{href: "/images/manifest.json", rel: "manifest"}
      %link{color: "#5bbad5", href: "/images/safari-pinned-tab.svg", rel: "mask-icon"}
      %meta{content: "#ffffff", name: "theme-color"}

    /[if lt IE 9]
      = javascript_include_tag 'http://html5shiv.googlecode.com/svn/trunk/html5.js'

    = javascript_include_tag 'https://code.jquery.com/jquery-2.0.3.min.js'
    = javascript_include_tag 'all'
    = stylesheet_link_tag 'all', media: 'all'
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css', media: 'all'
    = stylesheet_link_tag '//fonts.googleapis.com/css?family=Dosis:800', media: 'all'
    = stylesheet_link_tag "//fonts.googleapis.com/css?family=Roboto+Mono|Signika", media: 'all'
    = favicon_tag 'favicon.png'

  %body{ id: "#{@pageId}" }
    = yield
